<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


  <header class="row">
    <div class="three columns">
      <h1>Treebook</h1>
    </div>
    <div class="six columns">
      <ul class="nav-bar right">
        <li><%= link_to "All Statuses", feed_path %></li>
        <li><%= link_to "New Status", new_status_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to current_user.full_name, edit_user_registration_path %></li>
          <li><%= link_to "Log out", logout_path %></li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Register", register_path %></li>
        <% end %>

      </ul>
    </div>
  </header>

  <div class="row">
    <div class="twelve columns">
    <hr />

    <% flash.each do |type, message| %>

      <div class="alert-box <%= flash_class type %>">
        <%= message %>
        <a href="" class="close">&times;</a>
      </div>

    <% end %>

    <%= yield %>

    </div>
  </div>

  <footer class="row">
    <div class="twelve columns">
      <hr />
      <div class="row">
        <div class="six columns">
          <p>&copy; Copyright Jim Bijwaard 2012</p>
        </div>
        <div class="six columns">
          <ul class="inline-list right">
            <li><a href="#">Link 1</a></li>
            <li><a href="#">Link 2</a></li>
            <li><a href="#">Link 3</a></li>
            <li><a href="#">Link 4</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>


</body>
</html>


